.chat-item{
  width: 725rpx;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.chat-item  image{
  width: 120rpx;
  height: 100rpx;
}
.chat-item .avatar{
  flex: 1;
}
.chat-item .chat-content{
